<Window x:Class="GettingReal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:GettingReal.View" xmlns:gettingreal="clr-namespace:GettingReal" d:DataContext="{d:DesignInstance Type=gettingreal:MainViewModel}"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d" 
        Title="MainWindow" 
        Height="450" Width="700"
        MinHeight="450" MinWidth="700"
        
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        >
    
    <!--Fjerner windows topbar med minimize, close og maximize (Skal laves med custom UI senere)-->
    <!--<WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"
                      ResizeBorderThickness="2"
                      UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>-->
    


        <!--Window Highlight-->
    <Border CornerRadius="10" BorderThickness="2">
        <Border.BorderBrush>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" >
                <GradientStop Color="{StaticResource WindowHightlightColor1}" Offset="0.9"/>
                <GradientStop Color="{StaticResource WindowHightlightColor2}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Top Section-->
            <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"
                    CornerRadius="10,10,0,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0.5,1" >
                        <GradientStop Color="{StaticResource TopPanel1}" Offset="0"/>
                        <GradientStop Color="{StaticResource TopPanel2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            
                <!--Navigation Menu-->
                <StackPanel Orientation="Horizontal">
                    <RadioButton Style="{StaticResource menuButton}"
                                    Tag="{StaticResource IconBaseColor}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="cubes" Style="{StaticResource menuButtonIcon}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                    Tag="{StaticResource IconBaseColor}">
                        <StackPanel>
                            <fa:IconImage Icon="BoxesPacking" Style="{StaticResource menuButtonIcon}"/>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>

            </Border>

            <!--Topbar-->
            <Border Grid.Column="1" Grid.Row="0" Grid.RowSpan="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!--ControlBar-->
                    <StackPanel x:Name="pnlControlBar"
                                Grid.Row="0"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Background="Transparent"
                                Margin="-445,0,5,0"
                                MouseLeftButtonDown="pnlControlBar_MouseLeftButtonDown"
                                MouseEnter="pnlControlBar_MouseEnter">

                    </StackPanel>
                    
                </Grid>
            </Border>

            
            <!--Left Section-->
            <Border Grid.Column="0" Grid.Row="1"
                    CornerRadius="0,0,0,10">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0.4,1" >
                        <GradientStop Color="{StaticResource LeftPanel1}" Offset="0"/>
                        <GradientStop Color="{StaticResource LeftPanel2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                
            </Border>

            <!--Right Section-->
            <Border Grid.Column="1" Grid.Row="1"
                    CornerRadius="0,0,10,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0.8,1" >
                        <GradientStop Color="{StaticResource RightPanel1}" Offset="0"/>
                        <GradientStop Color="{StaticResource RightPanel2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                
                
            </Border>
            
        </Grid>
        
    </Border>
    
</Window>
    
    
    
    
