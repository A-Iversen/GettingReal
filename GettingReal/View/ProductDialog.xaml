<Window x:Class="GettingReal.View.ProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product" Height="250" Width="400" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20">
        <TextBlock Text="Name:"/>
        <TextBox Text="{Binding Name}" Margin="0,0,0,10"/>
        <TextBlock Text="Category:"/>
        <TextBox Text="{Binding Category}" Margin="0,0,0,10"/>
        <TextBlock Text="SKU:"/>
        <TextBox Text="{Binding SKU}" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" Margin="0,0,10,0" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="75" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>