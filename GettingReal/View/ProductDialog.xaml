<Window x:Class="GettingReal.View.ProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product" Height="300" Width="400" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20">
        <TextBlock Text="Name:"/>
        <TextBox Text="{Binding Name}" Margin="0,0,0,10"/>
        <TextBlock Text="Length:"/>
        <TextBox Text="{Binding Length}" Margin="0,0,0,10"/>
        <TextBlock Text="Height:"/>
        <TextBox Text="{Binding Height}" Margin="0,0,0,10"/>
        <TextBlock Text="Width:"/>
        <TextBox Text="{Binding Width}" Margin="0,0,0,10"/>
        <TextBlock Text="Fragile:"/>
        <CheckBox IsChecked="{Binding Fragile}" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" Margin="0,0,10,0" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="75" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>